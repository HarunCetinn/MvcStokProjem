@model MvcStokProjesi.Models.Entity.TblUrunler
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAd" required="" placeholder="Burası boş geçilemez..."/>
    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="Marka" required="" placeholder="Burası boş geçilemez..."/>
    </div>
    <div>
        <label>Ürün Kategori</label>
        @Html.DropDownListFor(m=>m.TblKategoriler.KategoriId,(List<SelectListItem>)ViewBag.dgr,new { @class = "form-control"})
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="Fiyat" />
    </div>
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="Stok" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>


